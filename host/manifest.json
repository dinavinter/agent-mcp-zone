{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "image-registry": {
      "type": "parameter.v0",
      "value": "{image-registry.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "default": {
            "value": "scai-dev.common.repositories.cloud.sap"
          }
        }
      }
    },
    "ai-core-resource-group": {
      "type": "parameter.v0",
      "value": "{ai-core-resource-group.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "ai-core-credentials": {
      "type": "parameter.v0",
      "value": "{ai-core-credentials.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "ai-core": {
      "type": "container.v1",
      "build": {
        "context": "../models/ai-core",
        "dockerfile": "../models/ai-core/Dockerfile"
      },
      "env": {
        "PORT": "{ai-core.bindings.http.targetPort}",
        "AI_CORE_CREDENTIALS_JSON": "{ai-core-credentials.value}",
        "AI_CORE_RESOURCE_GROUP": "{ai-core-resource-group.value}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 3002
        },
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8000
        }
      }
    },
    "mcp-servers-config": {
      "type": "parameter.v0",
      "value": "{mcp-servers-config.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "mcp-aggregator": {
      "type": "container.v1",
      "build": {
        "context": "../mcp-aggregator",
        "dockerfile": "../mcp-aggregator/Dockerfile"
      },
      "env": {
        "PORT": "{mcp-aggregator.bindings.http.targetPort}",
        "MCP_SERVERS_JSON": "{\"mcpServers\":{\"default\":{\"url\":\"https://aiam-mcps-everything.cfapps.eu12.hana.ondemand.com/mcp\",\"transport\":\"http\",\"name\":\"everything\"},\"github\":{\"url\":\"https://docs.mcp.cloudflare.com/sse/\",\"transport\":\"sse\",\"name\":\"cloudflare-docs\"}}}",
        "withPrivateRegistry": "true",
        "TARGETPLATFORM": "linux/amd64"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 7000,
          "external": true
        }
      }
    },
    "mcp-policy-guard": {
      "type": "container.v1",
      "build": {
        "context": "../mcp-policy-guard",
        "dockerfile": "../mcp-policy-guard/Dockerfile"
      },
      "env": {
        "PORT": "{mcp-policy-guard.bindings.http.targetPort}",
        "GUARD_URL": "{mcp-aggregator.bindings.http.url}",
        "withPrivateRegistry": "true",
        "TARGETPLATFORM": "linux/amd64"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8090,
          "external": true
        }
      }
    },
    "chat": {
      "type": "container.v1",
      "build": {
        "context": "../agents/chat",
        "dockerfile": "../agents/chat/Dockerfile"
      },
      "env": {
        "services__ai-core__http__0": "{ai-core.bindings.http.url}",
        "services__ai-core__tcp__0": "{ai-core.bindings.tcp.url}",
        "services__mcp-policy-guard__http__0": "{mcp-policy-guard.bindings.http.url}",
        "MCP_SERVER_URL": "{mcp-policy-guard.bindings.http.url}",
        "OPENAI_BASE_URL": "{ai-core.bindings.http.url}",
        "PORT": "{chat.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8001
        }
      }
    }
  }
}