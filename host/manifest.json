{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "ai-core-resource-group": {
      "type": "parameter.v0",
      "value": "{ai-core-resource-group.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "ai-core-credentials": {
      "type": "parameter.v0",
      "value": "{ai-core-credentials.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "ai-core": {
      "type": "executable.v0",
      "workingDirectory": "../models/ai-core",
      "command": "deno",
      "args": [
        "task",
        "start"
      ],
      "env": {
        "PORT": "{ai-core.bindings.http.targetPort}",
        "AI_CORE_CREDENTIALS_JSON": "{ai-core-credentials.value}",
        "AI_CORE_RESOURCE_GROUP": "default"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 3002,
          "targetPort": 8000
        },
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8001
        }
      }
    },
    "mcp-server": {
      "type": "parameter.v0",
      "value": "{mcp-server.inputs.value}",
      "inputs": {
        "value": {
          "type": "string"
        }
      }
    },
    "guard": {
      "type": "container.v1",
      "build": {
        "context": "../guard",
        "dockerfile": "../guard/Dockerfile"
      },
      "env": {
        "PORT": "{guard.bindings.http.targetPort}",
        "MCP_SERVER_URL": "{mcp-server.value}",
        "withPrivateRegistry": "true",
        "platform": "linux/amd64"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 7000,
          "external": true
        }
      }
    },
    "chat": {
      "type": "executable.v0",
      "workingDirectory": "../agents/chat",
      "command": "deno",
      "args": [
        "task",
        "start"
      ],
      "env": {
        "PORT": "{chat.bindings.http.targetPort}",
        "MCP_SERVER_URL": "{guard.bindings.http.url}",
        "services__ai-core__http__0": "{ai-core.bindings.http.url}",
        "services__ai-core__tcp__0": "{ai-core.bindings.tcp.url}",
        "OPENAI_BASE_URL": "{ai-core.bindings.http.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8002
        },
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 8003
        }
      }
    }
  }
}